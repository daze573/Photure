<div class="container">
  <div class="mt-5">
    <h1 class="text-center"><%= @post.user.name %>さん</h1>
    <%= attachment_image_tag @post, :image, size: "800x500", class: "col-8 offset-2" %>
    <table class="table">
      <tr>
        <td></td>
        <td id="favorite_buttons_<%= @post.id %>">
          <%= render "public/favorites/favorite", post: @post %>
        </td>
        <td>
          <% if current_user.id == @user.id %>
            <%= link_to "編集", edit_post_path(@post) %>
          <% end %>
        </td>
        <td></td>
      </tr>
      <tr>
        <th>作品名</th>
        <td><%= @post.title %></td>
        <td></td>
        <td></td>
      </tr>
      <tr>
        <th>紹介文</th>
        <td><%= @post.introduction %></td>
        <td></td>
        <td></td>
      </tr>
      <tr>
        <th>タグ</th>
        <td></td>
        <td></td>
        <td></td>
      </tr>
      <tr>
        <th>ジャンル</th>
        <td><%= @post.genre.name %></td>
        <td></td>
        <td></td>
      </tr>
    </table>
    <div>
      <p>コメント件数：<%= @post.comments.count %></p>
        <% @post.comments.each do |comment| %>
          <div>
            <%= attachment_image_tag comment.user, :image, class: "rounded-circle m-3 border", size: "50x50" %>
            <%= comment.user.name %>
            <%= comment.created_at.to_s(:date_jp) %>
            <%= comment.comment %>
            <% if user_signed_in? && comment.user_id == current_user.id %>
              <%= link_to "Destroy", post_comment_path(comment.post, comment), method: :delete, class: "btn btn-sm btn-danger" %>
            <% end %>
          </div>
        <% end %>
    </div>
    <div>
      <%= form_with model: [@post, @comment] do |f| %>
        <%= f.text_area :comment, rows: '5', placeholder: "コメントをここに", class: " form-control" %>
        <div class="text-right mt-2">
          <%= f.submit "送信する", class: "btn btn-success col-1" %>
        </div>
      <% end %>
    </div>
  </div>
</div>