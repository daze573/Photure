<div class="container">
  <h1 class="text-center mt-5">作品編集</h1>
  <div class="mt-3">
    <%= attachment_image_tag @post, :image, size: "800x500", class: "col-8 offset-2" %>
  </div>
  <h2 class="text-center mt-2">変更内容</h2>
  <%= form_with model: @post, local: true do |f| %>
    <table class="table mt-5">
      <tr>
        <th><%= f.label "作品画像" %></th>
        <td><%= f.file_field :image %></td>
      </tr>
      <tr>
        <th><%= f.label "作品名" %></th>
        <td><%= f.text_field :title, class: "form-control" %></td>
      </tr>
      <tr>
        <th><%= f.label "紹介文" %></th>
        <td><%= f.text_area :introduction, class: "form-control" %></td>
      </tr>
      <tr>
        <th><%= f.label "タグ" %></th>
        <td></td>
      </tr>
      <tr>
        <th><%= f.label "ジャンル" %></th>
        <td><%= f.select :genre_id, options_for_select(Genre.all.map { |genre| [genre.name, genre.id] }), {}, class: "form-control" %></td>
      </tr>
    </table>
    <%= f.submit "更新", class: "btn btn-success" %>
  <% end %>
</div>