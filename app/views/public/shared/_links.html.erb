<%- if controller_name != 'sessions' %>
  <p class="text-center text-secondary mt-3 mb-1">ログイン済みの方はこちらから</p>
  <%= link_to "ログイン", new_session_path(resource_name), class: "btn btn-primary btn-block" %><br />
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <p class="text-center text-secondary mt-3 mb-1">登録のお済みで無い方はこちらから</p>
  <%= link_to "新規登録", new_registration_path(resource_name), class: "btn btn-success btn-block" %><br />
<% end %>
