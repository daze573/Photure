<% if post.favorited_by?(current_user) %>
  <%= link_to post_favorites_path(post), method: :delete, remote: true do %>
    <span style="color:red;">
      <i class="fas fa-heart"></i><%= post.favorites.count %>
    </span>
  <% end %>
<% else %>
  <% if current_user %>
    <%= link_to post_favorites_path(post), method: :post, remote: true, data: {"turbolinks" => false} do %>
      <i class="fas fa-heart"></i><%= post.favorites.count %>
    <% end %>
  <% else %>
    <a href="/" onclick="alert('ログインしてください')">
      <i class="fas fa-heart"></i><%= post.favorites.count %>
    </a>
  <% end %>
<% end %>
