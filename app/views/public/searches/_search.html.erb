<div class="mt-2">
  <%= form_with url: search_path, local: true, method: :get do |f| %>
  <div class="input-group">
    <%= f.text_field :title, placeholder: "Search" %>
    <%= button_tag :type => "submit", :class =>"input-group-text" do %>
      <i class="fa fa-search"></i>
    <% end %>
  </div>
  <% end %>
</div>
