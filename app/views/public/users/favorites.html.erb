<div class="scroll-list jscroll">
  <div class="container">
    <h1 class="text-center mt-5">いいね一覧</h1>
  </div>
  <%= paginate @posts, remote: true, id: 'more_link' %>
  <div class="d-flex flex-wrap">
    <% @favorite_posts.each do |post| %>
      <div class="col-xl-4 col-md-6 col-sm-12 mt-4">
        <div class="card h-100">
          <% post.post_images.first(1).each do |image| %>
            <%= link_to post_path(post), class: "stretched-link" do %>
              <%= attachment_image_tag image, :image, class: "card-img-top", style: "object-fit: cover;" %>
            <% end %>
          <% end %>
          <span class="card-body text-center d-flex align-items-center justify-content-around">
            <span>
              <i class="fas fa-images"></i>
              <%= post.post_images.count %>
            </span>
            <span id="favorite_buttons_<%= post.id %>", class="favorite">
              <%= render "public/favorites/favorite", post: post %>
            </span>
            <span>
              <i class="far fa-comment"></i>
              <%= post.comments.count %>
            </span>
          </span>
        </div>
      </div>
    <% end %>
  </div>
</div>
