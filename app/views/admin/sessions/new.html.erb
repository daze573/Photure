<div class="container">
  <h2 class="text-center mt-5">管理者ログイン</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= flash[:alert] %>

    <table class="table table-light table-bordered mt-3">
      <tr>
        <th><%= f.label :email, "管理者メール" %></th>
        <td><%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %></td>
      </tr>
      <tr>
        <th><%= f.label :password, "パスワード" %></th>
        <td><%= f.password_field :password, autocomplete: "current-password", class: "form-control" %></td>
      </tr>
    </table>
    <table class="table table-light table-bordered">
      <tr>
        <th><%= f.submit "ログイン", class: "btn btn-primary btn-block" %></th>
      </tr>
      <tr>
        <th><%= render "admin/shared/links" %></th>
      </tr>
    </table>
  <% end %>
</div>
