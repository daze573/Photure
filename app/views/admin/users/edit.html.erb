<div class="container">
  <h2 class="text-center mt-5">編集画面</h2>
  <div>
    <%= form_with model: @user, url: admin_user_path, local: true do |f| %>
      <div class="card">
        <div class="card-body text-center">
          <div class="d-flex justify-content-center align-items-center">
            <div class="mr-2">
              <% if @user.image.present? %>
                <%= attachment_image_tag @user, :image, class: "rounded-circle border", size: "100x100" %>
              <% else %>
                <%= image_tag ("no_image.jpg"), class: "rounded-circle border", size: "100x100" %>
              <% end %>
            </div>
            <h3><%= @user.name %></h3>
          </div>
          <div class="mt-3">
            <%= @user.introduction %>
          </div>
          <div class="mt-5">
            <h4 class="text-danger">
              ※注意!!　本当に変更してよろしいか確認して下さい
            </h4>
          </div>
          <div class="mt-3">
            <%= f.label :false, "有効" %>
            <%= f.radio_button :user_status, false, class: "mr-5" %>
            <%= f.label :true, "退会" %>
            <%= f.radio_button :user_status, true %>
          </div>
          <div class="col-2 mx-auto mt-5">
            <%= f.submit "更新", class: "btn btn-success btn-block" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
