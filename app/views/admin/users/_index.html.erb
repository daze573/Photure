<table class="table table-hover table-light table-bordered mt-5 ">
    <thead class="table-active">
      <tr>
        <th>会員No</th>
        <th>アカウント名</th>
        <th>登録日</th>
        <th>ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% users.each do |user| %>
        <tr>
          <td class="align-middle text-center"><%= user.id %></td>
          <td>
            <%= link_to admin_user_path(user), class: "text-dark" do %>
              <% if user.image.present? %>
                <%= attachment_image_tag user, :image, class: "rounded-circle m-3 border d-sm-none d-md-inline", size: "50x50" %>
              <% else %>
                <%= image_tag ("no_image.jpg"), class: "rounded-circle m-3 border  d-none d-md-inline", size: "50x50" %>
              <% end %>
              <%= user.name %>
            <% end %>
          </td>
          <td class="align-middle"><%= user.created_at.to_s(:datetime_jp) %></td>
          <% if user.user_status == false %>
            <td class="text-success align-middle text-center">有効</td>
          <% else %>
            <td class="text-danger align-middle text-center">退会</td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>